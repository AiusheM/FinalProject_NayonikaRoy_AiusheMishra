<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="376dp"
        android:layout_height="144dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="EasyHealth UIUC"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/EmergenciesButton"
        android:layout_width="242dp"
        android:layout_height="152dp"
        android:layout_marginBottom="372dp"
        android:background="#EC1515"
        android:shadowColor="#00FFFFFF"
        android:text="Emergencies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/CMAButton"
        android:layout_width="242dp"
        android:layout_height="152dp"
        android:layout_marginBottom="220dp"
        android:background="#FFEB3B"
        android:text="Contact/ Make Appointment "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/SymptomButton"
        android:layout_width="242dp"
        android:layout_height="152dp"
        android:background="#4CAF50"
        android:text="Symptom Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CMAButton" />
</androidx.constraintlayout.widget.ConstraintLayout>